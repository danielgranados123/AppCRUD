<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity_login">

    <Button
        android:id="@+id/btnIngresarLogin"
        android:layout_width="314dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/gray2"
        android:fontFamily="@font/poppins_bold"
        android:text="Ingresar"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenaLogin"
        app:layout_constraintVertical_bias="0.148" />

    <EditText
        android:id="@+id/txtNombreUsuarioLogin"
        android:layout_width="317dp"
        android:layout_height="59dp"
        android:background="@drawable/ic_fondo_username"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Usuario"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:paddingStart="60dp"
        android:paddingTop="5dp"
        android:textColor="@color/gray2"
        android:textColorHint="@color/gray2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/txtHeyHolaDeNuevo"
        android:layout_width="206dp"
        android:layout_height="104dp"
        android:fontFamily="@font/poppins_bold"
        android:text="¡Hola\nde nuevo!"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <EditText
        android:id="@+id/txtContrasenaLogin"
        android:layout_width="314dp"
        android:layout_height="59dp"
        android:background="@drawable/ic_fondo_username"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:paddingStart="60dp"
        android:paddingTop="5dp"
        android:textColor="@color/gray2"
        android:textColorHint="@color/gray2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuarioLogin"
        app:layout_constraintVertical_bias="0.091" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtContrasenaLogin"
        app:layout_constraintEnd_toEndOf="@+id/txtContrasenaLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtContrasenaLogin"
        app:layout_constraintTop_toTopOf="@+id/txtContrasenaLogin"
        app:layout_constraintVertical_bias="0.357"
        app:srcCompat="@drawable/ic_password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="62dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtNombreUsuarioLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtNombreUsuarioLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        app:srcCompat="@drawable/ic_username" />

    <TextView
        android:id="@+id/txtNoCuentaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="¿No tienes una cuenta?"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresarLogin"
        app:layout_constraintVertical_bias="0.308" />

    <TextView
        android:id="@+id/txtRegistrateLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Regístrate"
        android:textColor="@color/gray2"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNoCuentaLogin"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgRegresar"
        android:layout_width="32dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txtHeyHolaDeNuevo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:srcCompat="@drawable/ic_return" />

</androidx.constraintlayout.widget.ConstraintLayout>